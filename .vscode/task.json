{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "qt_debug",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "${workspaceRoot}/qt_debug.cmd",
                "debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "qt_release",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "${workspaceRoot}/build_release.cmd",
                "release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}